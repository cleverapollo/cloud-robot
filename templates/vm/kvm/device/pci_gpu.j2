{% set domain = device.split(':')[0] %}
{% set bus = device.split(':')[1] %}
{% set slot = device.split(':')[-1].split('.')[0] %}
{% set function = device.split(':')[-1].split('.')[1] %}
<hostdev mode='subsystem' type='pci' managed='yes'>
    <driver name='vfio'/>
    <source>
        <address domain='0x{{ domain }}' bus='0x{{ bus }}' slot='0x{{ slot }}' function='0x{{ function }}'/>
    </source>
</hostdev>
