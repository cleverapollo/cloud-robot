<?xml version="1.0" encoding="UTF-8" ?>
<Network>
    <NetAdapters>
        <NetAdapter Name="vNIC-0" IP="{{ default_ip }}" Netmask="{{ default_netmask_int }}" GW="{{ default_gateway }}" DNS="{{ dns }}" RegisterDNS="1" />
{% for ip in ip_addresses %}
        <NetAdapter Name="vNIC-{{ loop.index }}" IP="{{ ip['ip'] }}" Netmask="{{ ip['netmask_int'] }}" GW="" DNS="{{ dns }}" RegisterDNS="1" />
{% endfor %}
    </NetAdapters>
</Network>
