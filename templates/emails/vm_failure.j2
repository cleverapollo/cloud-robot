{% extends "emails/base.j2" %}
{# A general failure email to be sent to the NOC #}

{% block title %}An error occurred while processing VM #{{ id }}.{% endblock %}

{% block content %}
<p>Task: <em>{{ task }}</em></p>
<p>Execption:</p>
<hr />
{% set errors = data.pop('errors') %}
<pre><code>{{ errors }}</code></pre>
<p>Below is the data that was involved in the error.</p>
<hr />
<pre><code>{{ data }}</code></pre>
{% endblock %}
