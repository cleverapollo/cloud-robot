try{
$VMName = '{{ vm_identifier }}'
Get-VM -Name $VMName | Get-VMHardDiskDrive -VMName $VMName | foreach {Remove-Item -Path $_.Path -Recurse -Force -Confirm:$false}
Remove $VMName
Remove-Item -Recurse D:\HyperV\$VMName
Write-Host $VMName + ' Successfully Deleted.'
} catch {Write-Error 'VM failed to delete.'}
